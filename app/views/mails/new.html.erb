<h1>Create your mail</h1>
<div>
  <%= form_with model: @user do |form| %>
    <div>
      <%= form.label :email %>
      <%= form.text_field :email %>
    </div>
    <div>
      <%= form.label :subject %>
      <%= form.text_field :subject %>
    </div>
    <div>
      <%= form.label :message %>
      <%= form.text_area :message %>
    </div>
    <%= form.submit 'Send' %>
  <% end %>
</div>
